    <body>
        <div id = "content" class = "container2 d-flex">
           <div class = "mx-auto text-center">
                <h1 class = 'p-4' style = "font-size: 70px">Flight-Finder</h1>
    
                <form id = "findflight" class = "p-2" style = "height:70px">

                    <input style ="height:70px; width: 160px; font-size: 15px; display: inline-block; vertical-align:middle" type="text" id = "destination" name = "destination" placeholder="Destination">
                    <input style ="height:70px; width: 160px; font-size: 15px; display: inline-block; vertical-align:middle" type="text" id = "origin" name = "origin" placeholder="Origin">

                    <input style ="height:70px; width: 160px; font-size: 15px; display: inline-block; vertical-align:middle" type="text" id = "outbound" name = "outbound" placeholder="Outbound yyyy/mm/dd">
                    <input style ="height:70px; width: 160px; font-size: 15px; display: inline-block; vertical-align:middle" type="text" id = "inbound" name = "inbound" placeholder="Inbound yyyy/mm/dd">
