        <script>
            $(document).ready(function(){
                $('#findflight').submit(function(){
                    var dest = $('#destination').val();
                    var orig = $('#origin').val(); 
                    var out = $('#outbound').val(); 
                    var inb = $('#inbound').val(); 
                    console.log(dest); 
                    if(dest == '' || orig == '' || out == '' || inb == ''){
                        console.log('alert'); 
                        alert('Not all fields filled out!'); 
                    }
                    else{
                        var pack = browseDates(dest,orig,out,inb); 
                        $('#destination').val(''); 
                        $('#origin').val(''); 
                        $('#outbound').val(''); 
                        $('#inbound').val(''); 

                    }

                });

            });

        </script>
